@import "normalize.styl"

header-height = 5em
nav-height    = 4em
logo-width    = 190px

dark-gray     = #707070
light-gray    = #FAFAFA
light-gray2   = #F0F0F0
gray-border   = #E0E0E0

main-black    = #444
ligth-blue    = #29ABE2

custom-margin = 0.5em

html
    background light-gray2

body
    background white
    box-shadow 0 0 100px rgba(0,0,0,0.3)
    color main-black
    font-family Arial
    font-size 16px
    height auto
    margin 0 auto
    position relative
    width 75%

    header
        height header-height
        left 0
        position relative
        top 0

        > div
            height header-height
            line-height header-height
            position absolute
            top 0

        #logo-area
            left 0
            width logo-width

            h1
                margin 0 0 0 custom-margin

                a
                    color ligth-blue
                    text-decoration none

                    &::first-letter
                        color red

        #ads-area
            left 0
            margin-left logo-width
            right 0
            text-align right /* This will only work if the child block is an inline-block */

            aside
                background ligth-blue
                border 1px dashed dark-gray
                border-radius 10px
                box-sizing border-box
                display inline-block
                height nav-height
                margin 0 custom-margin 0 0
                vertical-align: middle
                width 90%

    nav
        background light-gray
        border-bottom 1px solid gray-border
        border-top 1px solid gray-border
        height nav-height
        line-height nav-height
        position relative

        ul
            font-size 0
            line-height nav-height
            margin 0
            padding 0
            position absolute

            li
                display inline-block
                font-size 1rem
                line-height nav-height

            a
                color main-black
                display block
                font-weight bold
                padding 0 2em
                text-decoration none
                transition all 0.2s ease-in-out

                &:hover
                    background ligth-blue
                    color white

        #main-menu
            left 0

        #social-menu
            right 0

    #articles
        background white
        min-height 600px
        overflow hidden
        padding custom-margin
        position relative

        article

            blockquote
                border-left 3px solid gray-border
                padding-left 15px
                text-align justify

                &:before
                    display block
                    height 0
                    content "“"
                    margin-left -0.9em
                    font italic 4em Arial
                    color dark-gray

                > *
                    line-height 2em

                cite
                    display block
                    line-height 2em

                    &:before
                        content "— "

        article ~ article
            border-top 1px solid gray-border

    footer
        background ligth-blue
        border-top 1px solid gray-border
        padding 1em
        position relative
        text-align center

        ::selection
            background dark-gray

.left
    float left

.right
    float right

::selection
    background ligth-blue
    color white
    text-shadow none

@media only screen and (max-width: 400px)
    body
        transition all 0.2s ease-in-out
        width 100%

        header

            #logo-area
                text-align center
                width 100%

            #ads-area
                display none
